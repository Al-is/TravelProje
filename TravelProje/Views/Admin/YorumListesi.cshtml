@using TravelProje.Models.Sınıflar
@model List<Yorumlar>

@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<h2>Yorum Listesi</h2>
<br/>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı</th>
        <th>Mail</th>
        <th>Yorum</th>
        <th>Blog</th>
    </tr>
    @foreach(var x in Model)
    { 
        <tr>
            <td>@x.BlogId</td>
            <td>@x.KullaniciAdi</td>
            <td>@x.Mail</td>
            <td>@x.Yorum</td>
            <td>@*@x.Blog.Baslik*@</td>
            <td><a class="btn btn-danger" href="/Admin/YorumSil/@x.ID">Sil</a></td>
            <td><a class="btn btn-success" href="/Admin/YorumGetir/@x.ID">Güncelle</a></td>
        </tr>
    }
</table>
