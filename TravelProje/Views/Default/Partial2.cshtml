@using TravelProje.Models.Sınıflar;
@model List<Blog>

@foreach (var x in Model)
{


    <div class="right">
        <div class="bot-left">
            <img src="@x.BlogImage" alt="" />
        </div>

        <div class="left-text">
            <h4>@x.Baslik</h4>
            <span>@x.Tarih.ToShortDateString()</span>
            <p>@x.Aciklama.Substring(0, 1)</p>
            <p><a href="/Blog/Blogdetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
        </div>

    </div>
}